<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Media file access permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <!-- For Android 13+ (API 33+) granular media permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Storage access for older Android versions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Required for MusicPlayerService to call startForeground() -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Required on API 34+ to specify the foreground service type -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- Required for BarVisualizerView (Android classifies the Visualizer API
         as audio capture even for your own app's output on API 29+) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MixTape">

        <!-- Login Activity - Main launcher activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity - Can go back to Login -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

        <!-- Playlist Selection Activity - No parent (can't go back to login) -->
        <activity
            android:name=".PlaylistSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Playlist Activity - Can go back to Playlist Selection -->
        <activity
            android:name=".PlaylistActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlaylistSelectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlaylistSelectionActivity" />
        </activity>

        <!-- Music Player Activity -->
        <activity
            android:name=".MusicPlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlaylistActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlaylistActivity" />
        </activity>

        <!--
            MusicPlayerService — foregroundServiceType="mediaPlayback" is required:
              • On API 29+ to call startForeground() at all for media services
              • On API 34+ the FOREGROUND_SERVICE_MEDIA_PLAYBACK permission is also
                required (declared above) or the service will be killed immediately
        -->
        <service
            android:name=".service.MusicPlayerService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false" />

    </application>

</manifest>