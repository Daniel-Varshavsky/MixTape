<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_video_player.xml
    Modernized with Material Design components:
      • LinearLayout → androidx.appcompat.widget.LinearLayoutCompat
      • TextView → com.google.android.material.textview.MaterialTextView
      • ImageButton → com.google.android.material.button.MaterialButton
    Features:
    - Fullscreen VideoView as background
    - Overlay controls that can auto-hide
    - Same control layout as music player
    - Top controls: title and fullscreen toggle
    - Bottom controls: seekbar and playback buttons
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layoutDirection="ltr"
    android:textDirection="ltr">

    <!-- Main VideoView (fullscreen background) -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!-- Controls Overlay -->
    <RelativeLayout
        android:id="@+id/controlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <!-- Top Controls (Title + Fullscreen) -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/topControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/gradient_top_overlay"
            android:gravity="center_vertical">

            <!-- Video Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtVideoName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Video Name"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:layout_marginEnd="16dp" />

            <!-- Fullscreen Toggle Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFullscreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_fullscreen_24"
                app:iconTint="@color/white"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Toggle fullscreen" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Bottom Controls -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/bottomControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/gradient_bottom_overlay"
            android:padding="16dp">

            <!-- Seekbar + Time Labels -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- Start Time -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtVideoStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="0:00"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />

                <!-- Seekbar -->
                <SeekBar
                    android:id="@+id/videoSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/txtVideoStop"
                    android:layout_toEndOf="@id/txtVideoStart"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:progressTint="@color/red"
                    android:thumbTint="@color/red" />

                <!-- End Time -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtVideoStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0:00"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp" />

            </RelativeLayout>

            <!-- Playback Controls -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- Repeat Button - increased to 48dp minimum -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonRepeat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_repeat_24"
                    app:iconTint="@color/white"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="Toggle repeat"
                    android:layout_marginEnd="8dp" />

                <!-- Previous Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPrevious"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_skip_previous_24"
                    app:iconTint="@color/white"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="Previous video"
                    android:layout_marginEnd="8dp" />

                <!-- Fast Rewind Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFastRewind"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_fast_rewind_24"
                    app:iconTint="@color/white"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="Rewind 10 seconds"
                    android:layout_marginEnd="16dp" />

                <!-- Play/Pause Button (larger, central) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPlay"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_play_arrow_24"
                    app:iconTint="@color/white"
                    app:iconSize="36dp"
                    app:iconGravity="textStart"
                    android:backgroundTint="@color/black"
                    app:strokeColor="@color/red"
                    app:strokeWidth="1dp"
                    app:cornerRadius="32dp"
                    android:contentDescription="Play/Pause" />

                <!-- Fast Forward Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFastForward"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_fast_forward_24"
                    app:iconTint="@color/white"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="Forward 10 seconds"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />

                <!-- Next Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_skip_next_24"
                    app:iconTint="@color/white"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="Next video"
                    android:layout_marginStart="8dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</RelativeLayout>