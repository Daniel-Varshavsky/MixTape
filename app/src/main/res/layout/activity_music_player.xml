<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_music_player.xml
    Modernized with Material Design components:
      • LinearLayout → androidx.appcompat.widget.LinearLayoutCompat
      • TextView → com.google.android.material.textview.MaterialTextView
      • ImageView → androidx.appcompat.widget.AppCompatImageView
      • ImageButton → com.google.android.material.button.MaterialButton
-->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:weightSum="10">

    <!-- ── Top section: album art, song name, seekbar ── -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Song Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="italic" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/music" />

        <!-- Seekbar row: [0:00]──seekbar──[4:10] -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:thumbTint="@color/red"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@+id/seekbar"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/seekbar"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- ── Bottom section: playback controls + visualizer ── -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--
                Modernized control buttons using MaterialButton with proper icon properties:
                [Repeat]  [Previous]  [FastRewind]  [Play/Pause]  [FastForward]  [Next]
            -->

            <!-- Centre: Play / Pause -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_pause_24"
                app:iconTint="@color/red"
                app:iconSize="48dp"
                app:iconGravity="textStart"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Play/Pause" />

            <!-- Right of play: Fast Forward -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFastForward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/playButton"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_fast_forward_24"
                app:iconTint="@color/white"
                app:iconSize="32dp"
                app:iconGravity="textStart"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Fast forward" />

            <!-- Left of play: Fast Rewind -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFastRewind"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/playButton"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_fast_rewind_24"
                app:iconTint="@color/white"
                app:iconSize="32dp"
                app:iconGravity="textStart"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Fast rewind" />

            <!-- Right of Fast Forward: Next -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonNext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/buttonFastForward"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_skip_next_24"
                app:iconTint="@color/white"
                app:iconSize="36dp"
                app:iconGravity="textStart"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Next track" />

            <!-- Left of Fast Rewind: Previous -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPrevious"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/buttonFastRewind"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_skip_previous_24"
                app:iconTint="@color/white"
                app:iconSize="36dp"
                app:iconGravity="textStart"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Previous track" />

            <!-- Repeat button - now uses iconTint for proper color synchronization -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRepeat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/buttonPrevious"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/baseline_repeat_24"
                app:iconTint="@color/white"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Toggle repeat" />

            <!-- Audio visualizer — built-in Android Visualizer API, no third-party lib -->
            <com.example.mixtape.ui.BarVisualizerView
                android:id="@+id/blast"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>